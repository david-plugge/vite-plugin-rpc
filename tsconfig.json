{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
